extends ../../_layouts/base

include ../../_modules/content-block/content-block
include ../../inicio/presentacion/tabs/presentacion
include ../../inicio/presentacion/tabs/marcas
include ../../_modules/slider/slider

block config
  - var baseUrl = '../../'

block content
    main.inicio.inicio--presentacion
        .inicio--presentacion__content
            +tab-presentacion()
            +tab-marcas()
        
        .inicio--presentacion__nav
            +slider('inicio--presentacion__nav-panel')
                each group in site.data.inicioNav
                    .inicio--presentacion__nav-group
                        each item in group
                            a.inicio--presentacion__nav-item(href="#" data-target=item.target)=item.label
